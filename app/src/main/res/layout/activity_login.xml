<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3D1D72"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/rectangle30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rectangle_30"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/rectangle26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rectangle_26"
        app:layout_constraintEnd_toStartOf="@id/rectangle27"
        app:layout_constraintBottom_toBottomOf="@+id/rectangle27"
        />

    <ImageView
        android:id="@id/rectangle25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rectangle_25"
        app:layout_constraintTop_toTopOf="@+id/ellipse4"
        app:layout_constraintEnd_toStartOf="@+id/rectangle27"
        />

    <ImageView
        android:id="@+id/rectangle27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rectangle_27"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/ellipse4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ellipse_4"
        app:layout_constraintTop_toTopOf="@+id/rectangle30"
        app:layout_constraintStart_toStartOf="@+id/rectangle30"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="54dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rectangle_31"
        app:layout_constraintTop_toTopOf="@+id/ellipse4"
        app:layout_constraintStart_toEndOf="@+id/ellipse4"
        android:layout_marginStart="7dp" />

    <ImageView
        android:id="@+id/ellipse3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ellipse_3"
        app:layout_constraintEnd_toEndOf="@+id/rectangle27"
        app:layout_constraintBottom_toBottomOf="@+id/rectangle27"
        android:layout_marginRight="35dp"
        android:layout_marginTop="20dp"
        />

    <ImageView
        android:id="@+id/path46"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/path_46"
        app:layout_constraintTop_toTopOf="@+id/rectangle27"
        app:layout_constraintEnd_toEndOf="@+id/rectangle27"
        android:layout_marginRight="10dp"/>

    <ImageView
        android:id="@+id/path47"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/path_47"
        app:layout_constraintTop_toTopOf="@+id/rectangle27"
        app:layout_constraintEnd_toEndOf="@+id/rectangle27"
        android:layout_marginRight="30dp"/>

    <ImageView
        android:id="@+id/line61"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/line_6"
        app:layout_constraintEnd_toStartOf="@+id/rectangle25"
        app:layout_constraintTop_toTopOf="@+id/rectangle25"
        android:layout_marginTop="3dp"
        />

    <ImageView
        android:id="@+id/line62"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/line_6"
        app:layout_constraintEnd_toStartOf="@+id/rectangle25"
        app:layout_constraintTop_toBottomOf="@+id/line61"
        android:layout_marginTop="3dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/line_6"
        app:layout_constraintEnd_toStartOf="@+id/rectangle25"
        app:layout_constraintTop_toBottomOf="@+id/line62"
        android:layout_marginTop="3dp"
        />

    <ImageView
        android:id="@+id/rectangle29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rectangle_29"
        app:layout_constraintEnd_toStartOf="@+id/line61"
        app:layout_constraintTop_toTopOf="@+id/rectangle25"
        android:layout_marginRight="5dp"
        />

    <ImageView
        android:id="@+id/path53"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/path_53"
        app:layout_constraintEnd_toStartOf="@+id/rectangle29"
        app:layout_constraintTop_toTopOf="@+id/rectangle29"
        android:layout_marginTop="3dp"
        android:layout_marginRight="3dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/path_53"
        app:layout_constraintEnd_toEndOf="@+id/path53"
        app:layout_constraintTop_toTopOf="@+id/path53"
        android:layout_marginRight="5dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rectangle_28"
        app:layout_constraintTop_toBottomOf="@+id/path46"
        app:layout_constraintStart_toStartOf="@+id/path46"
        android:layout_marginTop="10dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/triangle_2"
        app:layout_constraintTop_toTopOf="@+id/showsText"
        app:layout_constraintEnd_toStartOf="@+id/showsText"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/path_48"
        app:layout_constraintStart_toStartOf="@+id/rectangle26"
        app:layout_constraintTop_toTopOf="@+id/rectangle26"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="27dp"
        />

    <TextView
        android:id="@+id/showsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shows"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintVertical_bias="0.2"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textColor="@color/white"
        android:textFontWeight="700"
        android:textSize="34sp"/>

    <TextView
        android:id="@+id/loginText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        app:layout_constraintLeft_toLeftOf="parent"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textColor="@color/white"
        android:textSize="34dp"
        android:textFontWeight="900"
        app:layout_constraintTop_toBottomOf="@+id/showsText"
        android:layout_marginTop="154dp"
        android:layout_marginLeft="24dp"
        />

    <TextView
        android:id="@+id/infoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="In order to continue please log in."
        app:layout_constraintLeft_toLeftOf="@+id/loginText"
        app:layout_constraintTop_toBottomOf="@+id/loginText"
        android:textColor="@color/white"
        android:textFontWeight="400"
        android:fontFamily="sans-serif"
        android:layout_marginTop="16dp"
        />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/emailInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        app:layout_constraintTop_toBottomOf="@+id/infoText"
        android:layout_marginTop="25dp"
        android:hint="Email"
        app:boxBackgroundMode="outline"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:textColorHint="@color/white"
        app:boxStrokeColor="@color/white"
        app:endIconTint="@color/white"
        app:placeholderTextColor="@color/white"
        android:outlineAmbientShadowColor="@color/white"
        app:hintTextColor="@color/white"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"/>

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/emailValidationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please insert a valid email address."
        android:textColor="#FF0000"
        app:layout_constraintTop_toBottomOf="@+id/emailInput"
        app:layout_constraintStart_toStartOf="@id/emailInput"
        android:visibility="invisible"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/passwordInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        app:layout_constraintTop_toBottomOf="@+id/emailInput"
        android:layout_marginTop="25dp"
        android:hint="Password"
        app:boxBackgroundMode="outline"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:textColorHint="@color/white"
        app:boxStrokeColor="@color/white"
        app:endIconMode="password_toggle"
        app:endIconTint="@color/white"
        app:placeholderTextColor="@color/white"
        android:outlineAmbientShadowColor="@color/white"
        app:hintTextColor="@color/white">


        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"/>


    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/loginButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="32dp"
        android:text="Login"
        android:background="@drawable/button_bg_selector"
        android:backgroundTint="@color/white"
        android:textAllCaps="false"
        android:fontFamily="sans-serif"
        android:enabled="false"
        />

</androidx.constraintlayout.widget.ConstraintLayout>